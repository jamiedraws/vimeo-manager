{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "target": "es5",
        "module": "esnext",
        "lib": ["es5", "es6", "ES2015.Collection", "dom", "es2017"],
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "shared*": ["shared*"],
            "Shared*": ["Shared*"],
            "ts*" : ["ts*"]
        },
        "typeRoots": [
            "Shared/ts/interfaces",
            "node_modules/@types"
        ]
    }
}